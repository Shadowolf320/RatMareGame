//Player Super SImple Inventory system, for collectables

using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.Events;

public class Inventory : MonoBehaviour
{
    // Start is called before the first frame update
    public int NumberofApples { get; private set; }

    

    public UnityEvent<Inventory> OnAppleCollected;

    public UnityEvent<Inventory> OnPotionCollected;



    public void AppleCollected()
    {
        NumberofApples++;
        OnAppleCollected.Invoke(this);
    }

   public void PotionCollected()
    {
        OnPotionCollected.Invoke(this);
    }
}
